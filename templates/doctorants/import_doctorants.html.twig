{% extends 'template.html.twig' %}

{% block title %}Importer des Doctorants{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Importer des Doctorants</div>
</div>
<div class="row">
    <div class="col-lg-8 mx-auto mb-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body">
                <h5 class="card-title mb-4">Importer des Doctorants depuis Excel</h5>
                <hr class="my-3">
                
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message|nl2br }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method="post" enctype="multipart/form-data" class="mt-4">
                    <div class="mb-3">
                        <label for="excel_file" class="form-label">Fichier Excel</label>
                        <input type="file" 
                               class="form-control" 
                               id="excel_file" 
                               name="excel_file" 
                               accept=".xlsx,.xls"
                               required>
                        <small class="form-text text-muted">
                            Format attendu: fichier Excel (.xlsx, .xls) avec les colonnes suivantes:<br>
                            Etablissement, Nom, Prénom, etc.
                        </small>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-primary">Importer</button>
                        <a href="{{ path('list_doctorants') }}" class="btn btn-outline-secondary">Retour</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- New Container for Downloading Excel Template -->
    <div class="col-lg-4 mx-auto mb-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body">
                <h5 class="card-title mb-4">Télécharger le Modèle Excel</h5>
                <hr class="my-3">
                <p class="card-text mb-4">
                    Téléchargez le modèle Excel pour savoir comment structurer votre fichier.
                </p>
                <a href="{{ asset('uploads/maquette.xlsx') }}" class="btn btn-success" download>
                    <i class="fas fa-download"></i> Télécharger le Modèle
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
