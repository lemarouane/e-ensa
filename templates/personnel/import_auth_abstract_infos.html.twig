{% extends 'template.html.twig' %}

{% block title %}Importer Auteurs et Abstracts{% endblock %}

{% block body %}
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Importer Auteurs et Abstracts</div>
</div>
<div class="row">
    <div class="col-lg-12 mx-auto">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h5 class="card-title">Importer des Données depuis Excel</h5>
                <hr>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message|nl2br }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <form method="post" enctype="multipart/form-data" action="{{ path('import_auth_abstract_infos') }}" class="mt-4">
                    <div class="mb-3">
                        <label for="excel_file" class="form-label">Fichier Excel pour Auteurs et Abstracts</label>
                        <input type="file"
                               class="form-control"
                               id="excel_file"
                               name="excel_file"
                               accept=".xlsx,.xls"
                               required>
                        <small class="form-text text-muted">
                            Format attendu: fichier Excel (.xlsx, .xls) avec les colonnes suivantes:<br>
                            <strong>Titre, Auteurs, Abstracts, Affiliations</strong>
                        </small>
                    </div>
                    <div class="text-end mt-3">
                        <button type="submit" class="btn btn-primary">Importer les Données</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
